# Development Environment Configuration for RecoveryOS
# This file contains development-specific settings for local testing

# OpenAI API Configuration
OPENAI_API_KEY=test-key-for-testing

# Database Configuration (Development)
DATABASE_URL=sqlite:///./recoveryos_dev.db
ENV=development

# Security Configuration (Development - Relaxed)
CSP_MODE=report-only
ENABLE_HTTPS_ENFORCEMENT=false
ALLOW_LOCALHOST=true
RISK_HIGH_THRESHOLD=5.0

# Application Configuration
APP_NAME=RecoveryOS API (Dev)
APP_VERSION=0.1.0-dev
PORT=8000
WORKERS=1
TIMEOUT=45

# Logging Configuration (Development)
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# Slack Integration (Development - Disabled)
SLACK_WEBHOOK=
ALERT_THROTTLE_MINUTES=5

# Email Configuration (Development)
BRIEFINGS_RECIPIENTS=dev@localhost

# Performance Configuration (Development)
POOL_SIZE=5
MAX_OVERFLOW=10
POOL_PRE_PING=false

# Security Headers Configuration (Development)
HSTS_MAX_AGE=0
CSP_REPORT_URI=

# Monitoring Configuration (Development)
ENABLE_METRICS=false
HEALTH_CHECK_INTERVAL=60

# Cache Configuration (Development)
REDIS_URL=
CACHE_TTL=300

# Rate Limiting (Development - Disabled)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Testing Configuration
TESTING=true
