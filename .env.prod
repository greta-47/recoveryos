# Production Environment Configuration for RecoveryOS
# This file contains production-specific security and performance settings

# OpenAI API Configuration
OPENAI_API_KEY=your_production_openai_api_key_here

# Database Configuration (Production)
DATABASE_URL=postgresql://username:password@hostname:5432/recoveryos_prod
ENV=production

# Security Configuration (Production - Strict)
CSP_MODE=enforce
ENABLE_HTTPS_ENFORCEMENT=true
ALLOW_LOCALHOST=false
RISK_HIGH_THRESHOLD=7.0

# Application Configuration
APP_NAME=RecoveryOS API
APP_VERSION=0.1.0
PORT=8000
WORKERS=4
TIMEOUT=60

# Logging Configuration (Production)
LOG_LEVEL=INFO
LOG_FORMAT=json

# Slack Integration (Production)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK
ALERT_THROTTLE_MINUTES=30

# Email Configuration (Production)
BRIEFINGS_RECIPIENTS=clinician@hospital.com,admin@recoveryos.com

# Performance Configuration (Production)
POOL_SIZE=20
MAX_OVERFLOW=30
POOL_PRE_PING=true

# Security Headers Configuration (Production)
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://your-csp-report-endpoint.com/report

# Monitoring Configuration (Production)
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30

# Cache Configuration (Production)
REDIS_URL=redis://redis-server:6379/0
CACHE_TTL=3600

# Rate Limiting (Production)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
